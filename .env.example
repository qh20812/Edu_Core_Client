# ================================
# EDUCORE CLIENT ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and update with your actual values
# Never commit .env file to version control!

# ================================
# API CONFIGURATION
# ================================
# Backend API URL
VITE_API_URL=http://localhost:5000/api
# API timeout (in milliseconds)
VITE_API_TIMEOUT=10000

# ================================
# APPLICATION CONFIGURATION
# ================================
# App name
VITE_APP_NAME=EduCore
# App version
VITE_APP_VERSION=1.0.0
# Environment
VITE_NODE_ENV=development

# ================================
# AUTHENTICATION
# ================================
# JWT token storage key
VITE_JWT_STORAGE_KEY=educore_token
# Token refresh threshold (minutes before expiry)
VITE_TOKEN_REFRESH_THRESHOLD=5

# ================================
# THIRD-PARTY SERVICES
# ================================
# Google Analytics
VITE_GA_TRACKING_ID=your-ga-tracking-id

# Google Maps (if using maps)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase (if using)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id

# Sentry for error tracking
VITE_SENTRY_DSN=your-sentry-dsn

# ================================
# FILE UPLOAD
# ================================
# Maximum file size (in MB)
VITE_MAX_FILE_SIZE=10
# Allowed file types
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ================================
# UI/UX CONFIGURATION
# ================================
# Default theme (light/dark)
VITE_DEFAULT_THEME=light
# Default language
VITE_DEFAULT_LANGUAGE=vi
# Items per page for pagination
VITE_ITEMS_PER_PAGE=20

# ================================
# FEATURE FLAGS
# ================================
# Enable dark mode
VITE_ENABLE_DARK_MODE=true
# Enable multi-language
VITE_ENABLE_I18N=true
# Enable PWA features
VITE_ENABLE_PWA=false

# ================================
# DEVELOPMENT
# ================================
# Enable debug mode
VITE_DEBUG_MODE=true
# Show dev tools
VITE_SHOW_DEV_TOOLS=true
